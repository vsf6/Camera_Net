<Window x:Class="VerySimpleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VerySimpleWpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:public="clr-namespace:Camera_NET.Public;assembly=Camera_NET"
        Title="MainWindow"
        Width="525"
        Height="350"
        Loaded="MainWindow_OnLoaded"
        mc:Ignorable="d" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <public:CameraControlWpf Name="cameraControl" />
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Button Content="Start" Margin="5" Click="StartButton_Click" />
            <Button Content="Stop" Margin="5" Click="StopButton_Click" />
            <Button Content="Snapshot" Margin="5" Click="SnapshotButton_Click" />
            <ComboBox Name="ResolutionsComboBox" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
